<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:networkManagerAvalonia="clr-namespace:AvaloniaNetworkClient"
        x:Class="AvaloniaNetworkClient.LoginWindow"
        Title="Network Manager">
    <StackPanel Margin="10">
        <TextBox x:Name="AddressInput" Watermark="Address" Margin="0,0,0,10"/>
        <TextBox x:Name="PortInput" Watermark="Port" Margin="0,0,0,10"/>
        <TextBox x:Name="UserInput" Watermark="Username" Margin="0,0,0,10"/>
        <TextBox x:Name="PasswordInput" Watermark="Password" Margin="0, 0, 0, 10"
                 PasswordChar="*"></TextBox>
        <Button Content="Login" Click="LoginButton_Click"/>
    </StackPanel>
</Window>